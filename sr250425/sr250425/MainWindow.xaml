<Window x:Class="sr250425.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sr250425"
        mc:Ignorable="d"
        Title="Business Application" Height="450" Width="800">
    <Grid Background="Black">
        <!--calendar-->
        <StackPanel Orientation="Vertical" Margin="10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Foreground="#FFA4A4A4">File</TextBlock>
                <TextBlock Foreground="#FFA4A4A4" Margin="10 0 0 0">Notifications</TextBlock>
                <TextBlock Foreground="#FFA4A4A4" Margin="10 0 0 0">Status</TextBlock>
                <TextBlock Foreground="#FFA4A4A4" Margin="10 0 0 0">View</TextBlock>
                <TextBlock Foreground="#FFA4A4A4" Margin="10 0 0 0">Customer</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0 10">
                <TextBlock Foreground="#FFA4A4A4" FontSize="22">Customer Search</TextBlock>
                <TextBlock Foreground="White" FontSize="22" Margin="20 0 0 0">Edit Customer</TextBlock>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Background="#FF585858" Height="30">
                <Button Background="#FF8F8F8F" BorderBrush="White" Foreground="White" Height="25" Width="80" Margin="600 0 0 0" HorizontalAlignment="Right">Save Data</Button>
                <Button Background="#FF8F8F8F" BorderBrush="White" Foreground="White" Height="25" Width="80" Margin="5 0 0 0" HorizontalAlignment="Right">Close</Button>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Background="#FF585858" Margin="0 5 0 0" Height="320">
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <TextBlock Foreground="White" Margin="0 13 0 0">First Name:</TextBlock>
                    <TextBlock Foreground="White" Margin="0 7 0 0">Last Name:</TextBlock>
                    <TextBlock Foreground="White" Margin="0 7 0 0">Company Name:</TextBlock>
                    <TextBlock Foreground="White" Margin="0 7 0 0">Division:</TextBlock>
                    <TextBlock Foreground="Black" FontWeight="Bold" Margin="0 15 0 0">Phone Numbers</TextBlock>
                    <TextBlock Foreground="White" Margin="0 3 0 0">Phone:</TextBlock>
                    <TextBlock Foreground="White" Margin="0 5 0 0">Fax:</TextBlock>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 10 0 0"></TextBox>
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 5 0 0"></TextBox>
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 5 0 0"></TextBox>
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 5 0 0"></TextBox>
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 30 0 0"></TextBox>
                    <TextBox Width="200" Background="Black" Foreground="White" BorderBrush="White" Margin="0 5 0 0"></TextBox>
                </StackPanel>
                <TextBlock Foreground="White" Margin="10">Birthday:</TextBlock>
                <Calendar Margin="10 5"></Calendar>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
